<link rel="stylesheet" href="css/chat.css">
@model ChatIndexViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="w-100">
    <h2 class="display-4">@Model.DiaryName</h2>
    <div id="sideMenu"></div>
    <div>
        <div class="w-100 d-block">
            <div id="messages">
                Loading...
            </div>
        </div>
        <div id="inputArea" class="form-group">
            <div class="input-group">
                <textarea class="form-control noresize" type="text" id="chatBox" rows="1" placeholder="Type to chat with @Model.DiaryName"></textarea>

                <span class="input-group-btn">
                    <button id="enterBtn" class="btn btn-outline-primary">Enter</button>
                </span>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/chat.js"></script>
}